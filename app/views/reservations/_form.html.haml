- if @reservation.errors.any?
  %ul
    - @reservation.errors.full_messages.each do |m|
      %li
        = m
= form_with model: @reservation, local: true do |f|
  %p お客様
  = f.text_field :guest
  %p 部屋
  = f.select :room_id, Room.all.map { |r| [r.name, r.id] }, prompt: "選択してください"
  %p 料理
  = f.select :kaiseki_id, Kaiseki.all.map { |k| [k.name, k.id] }, prompt: "選択してください"
  %p 人数
  = f.select :number_of_guest, [*1..12], prompt: "選択してください"
  %p 日時
  = f.date_select :date, {default: Date.today + 1}
  = f.time_select :start_time, {discard_minute: true, discard_second: true, start_hour: 11, end_hour: 21}
  %p メモ
  = f.text_area :memo
  = f.submit "登録"